{
  "manifest_version": 2,
  "name": "MixSlideshow",
  "version": "0.1.1",

  "homepage_url": "https://gchristensen.github.io/mix-slideshow/",

  "description": "TODO",

  "applications": {
    "gecko": {
      "id": "mix-slideshow@gchristensen.github.io",
      "strict_min_version": "102.0",
      "update_url": "https://raw.githubusercontent.com/GChristensen/mix-slideshow/master/updates.json"
    }
  },

  "icons": {
    "16": "ui/icons/logo.svg",
    "48": "ui/icons/logo.svg",
    "96": "ui/icons/logo.svg",
    "128": "ui/icons/logo.svg"
  },

  "browser_action": {
    "default_icon": {
      "64": "ui/icons/logo.svg"
    },
    "default_title": "Mix Slideshow"
  },

  "background": {
    "scripts": ["global.js", "background.js"]
  },

  "options_ui": {
    "page": "ui/options.html",
    "browser_style": true
  },

  "permissions": ["<all_urls>", "tabs", "storage", "unlimitedStorage", "notifications", "nativeMessaging", "downloads"]
}